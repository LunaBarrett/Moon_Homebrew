    "race": [
        {
            "name": "Dweller",
            "source": "M:E_Races",
            "alias": [
                "Elebus Dwarf",
                "Dwarf",
                "Living Geode"
            ],
            "creatureTypes": [
                "humanoid"
            ],
            "size": [
                "S",
                "M"
            ],
            "speed": 30,
            "ability": [
                {
                    "choose": {
                        "weighted": {
                            "from": [
                                "str",
                                "dex",
                                "con",
                                "int",
                                "wis",
